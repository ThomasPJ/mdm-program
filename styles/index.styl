body
  background-color: #eee
  font-family: 'Signika', sans-serif;

.Intro
  padding: 10px
h1
  margin: 0
  color: #000
h2
  margin: 0
  font-weight: normal
  color: #969696
  font-style: italic
  font-size: 17px

ul
  margin: 0
  padding: 0
  width: 500px
  padding: 10px
  li
    list-style-type: none
    margin: 20px 0
    border-bottom: 1px solid #ddd
    padding: 10px 0
    a
      text-decoration: none
      color: #2DAADE
      font-weight: 700
      font-size: 17px
    a:hover
      text-decoration: underline
    p
      margin: 0
      font-size: 14px
    p.Project-description
      color: #000
    p.Additional-comments
      color: #969696
      font-style: italic
