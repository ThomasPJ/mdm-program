body
  background-color: #eee
  font-family: 'Signika', sans-serif
  margin: 0

.Main-Wrapper {
  width: 50%
  margin: 0 auto
}
.Intro
  padding: 10px
h1
  margin: 0
  color: #000
  text-transform: uppercase
  font-size: 17px
h2
  margin: 0
  font-weight: normal
  color: #969696
  font-style: italic
  font-size: 14px

ul
  margin: 0
  padding: 0
  width: 500px
  padding: 10px
  li
    list-style-type: none
    margin: 30px 0
    border-bottom: 1px solid #D0D0D0
    padding: 10px 0
    a
      text-decoration: none
      color: #2DAADE
      font-weight: 700
      font-size: 14px
      text-transform: uppercase
    a:hover
      text-decoration: underline
    p
      margin: 0
      font-size: 13px
    p.Project-description
      color: #000
